<?xml version="1.0"?>
<zcl:cluster xmlns:schemaLocation="http://zigbee.org/zcl/clusters cluster.xsd http://zigbee.org/zcl/types type.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:type="http://zigbee.org/zcl/types" xmlns:xi="http://www.w3.org/2001/XInclude" id="0006" revision="0" name="On/Off" xmlns:zcl="http://zigbee.org/zcl/clusters">
  <classification role="application" picsCode="OO" />
  <server>
    <attributes>
      <attribute id="0000" name="OnOff" type="bool" required="true" default="0" />
      <attribute id="4000" name="GlobalSceneControl" type="bool" default="1" />
      <attribute id="4001" name="OnTime" type="uint16" writable="true" max="65535" default="0" />
      <attribute id="4002" name="OffWaitTime" type="uint16" writable="true" max="65535" default="0" />
      <attribute id="4003" name="StartUpOnOff" type="enum8" writable="true" default="MS">
        <restriction>
          <type:enumeration value="0" name="Set the OnOff attribute to 0 (off)." />
          <type:enumeration value="1" name="Set the OnOff attribute to 1 (on)." />
          <type:enumeration value="2" name="If the previous value of the OnOff attribute is equal to 0, set the OnOff attribute to 1.  If the previous value of the OnOff attribute is equal to 1, set the OnOff attribute to 0 (toggle)." />
          <type:enumeration value="FF" name="Set the OnOff attribute to its previous value." />
        </restriction>
      </attribute>
    </attributes>
    <commands>
      <command id="00" name="Off" required="true" />
      <command id="01" name="On" required="true" />
      <command id="02" name="Toggle" required="true" />
      <command id="40" name="Off with effect">
        <fields>
          <field name="Effect identifier" type="uint8" />
          <field name="Effect variant" type="uint8" />
        </fields>
      </command>
      <command id="41" name="On with recall global scene" />
      <command id="42" name="On with timed off">
        <fields>
          <field name="On/off Control" type="uint8" />
          <field name="On Time" type="uint16" />
          <field name="Off Wait Time" type="uint16" />
        </fields>
      </command>
    </commands>
  </server>
</zcl:cluster>