<?xml version="1.0"?>
<zcl:cluster xmlns:schemaLocation="http://zigbee.org/zcl/clusters cluster.xsd http://zigbee.org/zcl/types type.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:type="http://zigbee.org/zcl/types" xmlns:xi="http://www.w3.org/2001/XInclude" id="000B" revision="0" name="RSSI" xmlns:zcl="http://zigbee.org/zcl/clusters">
  <classification role="utility" picsCode="RSSI" />
  <server>
    <attributes>
      <attribute id="0000" name="LocationType" type="data8" writable="true" required="true" default="-" />
      <attribute id="0001" name="LocationMethod" type="enum8" writable="true" required="true" default="-">
        <restriction>
          <type:enumeration value="00" name="Lateration" />
          <type:enumeration value="01" name="Signposting" />
          <type:enumeration value="02" name="RF fingerprinting" />
          <type:enumeration value="03" name="Out of band" />
          <type:enumeration value="04" name="Centralized" />
        </restriction>
      </attribute>
      <attribute id="0002" name="LocationAge" type="uint16" max="65535" default="-" />
      <attribute id="0003" name="QualityMeasure" type="uint8" max="100" default="-" />
      <attribute id="0004" name="NumberOfDevices" type="uint8" max="255" default="-" />
      <attribute id="0010" name="Coordinate1" type="int16" writable="true" required="true" default="-" />
      <attribute id="0011" name="Coordinate2" type="int16" writable="true" required="true" default="-" />
      <attribute id="0012" name="Coordinate3" type="int16" writable="true" default="-" />
      <attribute id="0013" name="Power" type="int16" writable="true" required="true" default="-" />
      <attribute id="0014" name="PathLossExponent" type="uint16" writable="true" required="true" max="65535" default="-" />
      <attribute id="0015" name="ReportingPeriod" type="uint16" writable="true" max="65535" default="-" />
      <attribute id="0016" name="CalculationPeriod" type="uint16" writable="true" max="65535" default="-" />
      <attribute id="0017" name="NumberRSSIMeasurements" type="uint8" writable="true" required="true" min="1" max="255" default="-" />
    </attributes>
    <commands>
      <command id="00" name="Set Absolute Location" required="true">
        <fields>
          <field name="Coordinate 1" type="int16" />
          <field name="Coordinate 2" type="int16" />
          <field name="Coordinate 3" type="int16" />
          <field name="Power" type="int16" />
          <field name="Path Loss Exponent" type="uint16" />
        </fields>
      </command>
      <command id="01" name="Set Device Configuration" required="true" />
      <command id="02" name="Get Device Configuration" required="true" />
      <command id="03" name="Get Location Data" required="true" />
      <command id="04" name="RSSI Response">
        <fields>
          <field name="Replying Device" type="EUI64" />
          <field name="X" type="int16" />
          <field name="Y" type="int16" />
          <field name="Z" type="int16" />
          <field name="RSSI" type="int8" />
          <field name="NumberRSSIMeasurements" type="uint8" />
        </fields>
      </command>
      <command id="05" name="Send Pings">
        <fields>
          <field name="Target Address" type="EUI64" />
          <field name="NumberRSSIMeasurements" type="uint8" />
          <field name="CalculationPeriod" type="uint16" />
        </fields>
      </command>
      <command id="06" name="Anchor Node Announce">
        <fields>
          <field name="Anchor Node IEEE Address" type="EUI64" />
          <field name="X" type="int16" />
          <field name="Y" type="int16" />
          <field name="Z" type="int16" />
        </fields>
      </command>
    </commands>
  </server>
  <client>
    <commands>
      <command id="00" name="Device configuration response" required="true">
        <fields>
          <field name="Status" type="enum8" />
          <field name="Power" type="int16" />
          <field name="Path Loss Exponent" type="uint16" />
          <field name="Calculation Period" type="uint16" />
          <field name="Number RSSI Measurements" type="uint8" />
          <field name="Reporting Period" type="uint16" />
        </fields>
      </command>
      <command id="01" name="Location data response" required="true">
        <fields>
          <field name="Status" type="enum8" />
          <field name="Loca-tion Type" type="data8" />
          <field name="Coordinate 1" type="int16" />
          <field name="Coordinate 2" type="int16" />
          <field name="Coordinate 3" type="int16" />
          <field name="Power" type="int16" />
          <field name="Path Loss Exponent" type="uint16" />
          <field name="Location Method" type="enum8" />
          <field name="Quality Mea-sure" type="uint8" />
          <field name="Location Age" type="uint16" />
        </fields>
      </command>
      <command id="02" name="Location data notification" required="true">
        <fields>
          <field name="Location Type" type="data8" />
          <field name="Coordinate 1" type="int16" />
          <field name="Coordinate 2" type="int16" />
          <field name="Coordinate 3" type="int16" />
          <field name="Power" type="int16" />
          <field name="Path Loss Exponent" type="uint16" />
          <field name="Location Method" type="enum8" />
          <field name="Quality Measure" type="uint8" />
          <field name="Location Age" type="uint16" />
        </fields>
      </command>
      <command id="03" name="Compact location data notification" required="true" />
      <command id="04" name="RSSI Ping" required="true">
        <fields>
          <field name="Location Type" type="data8" />
        </fields>
      </command>
      <command id="05" name="RSSI Request" />
      <command id="06" name="Report RSSI Measurements">
        <fields>
          <field name="Measuring Device" type="EUI64" />
          <field name="N Neighbors" type="uint8" />
          <field name="NeighborsInfo" type="Variable [E1]" />
        </fields>
      </command>
      <command id="07" name="Request Own Location">
        <fields>
          <field name="IEEE Address of the Blind Node" type="EUI64" />
        </fields>
      </command>
    </commands>
  </client>
</zcl:cluster>
