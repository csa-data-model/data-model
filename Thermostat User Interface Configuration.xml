<?xml version="1.0" encoding="utf-16"?>
<ZclCluster xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="0204" revision="0" name="Thermostat User Interface Configuration">
  <classification role="application" picsCode="TSUIC" />
  <server>
    <attributes>
      <attribute id="0000" name="TemperatureDisplayMode" type="enum8" writable="true" required="true" default="0x00 (Celsius)" />
      <attribute id="0001" name="KeypadLockout" type="enum8" writable="true" required="true" default="0x00 (no lockout)">
        <restriction>
          <facet xsi:type="enumerationType" value="0" name="No lockout" xmlns="http://zigbee.org/zcl/types" />
          <facet xsi:type="enumerationType" value="1" name="Level 1 lockout" xmlns="http://zigbee.org/zcl/types" />
          <facet xsi:type="enumerationType" value="2" name="Level 2 lockout" xmlns="http://zigbee.org/zcl/types" />
          <facet xsi:type="enumerationType" value="3" name="Level 3 lockout" xmlns="http://zigbee.org/zcl/types" />
          <facet xsi:type="enumerationType" value="4" name="Level 4 lockout" xmlns="http://zigbee.org/zcl/types" />
          <facet xsi:type="enumerationType" value="5" name="Level 5 lockout (least functionality available to the user)" xmlns="http://zigbee.org/zcl/types" />
        </restriction>
      </attribute>
      <attribute id="0002" name="ScheduleProgrammingVisibility" type="enum8" writable="true" default="0x00">
        <restriction>
          <facet xsi:type="enumerationType" value="0" name="Local schedule programming functionality is enabled at the thermostat" xmlns="http://zigbee.org/zcl/types" />
          <facet xsi:type="enumerationType" value="1" name="Local schedule programming functionality is disabled at the thermostat" xmlns="http://zigbee.org/zcl/types" />
        </restriction>
      </attribute>
    </attributes>
  </server>
</ZclCluster>